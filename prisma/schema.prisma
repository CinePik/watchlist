// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  seed     = "prisma/seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id               Int      @id
  userId           String
  movieComments    MovieComment[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
 
  @@unique([userId, id])
}

model Show {
  id               Int    @id @default(autoincrement())
  showId           Int
  userId           String
  season           Int
  episode          Int
  showComments     ShowComment[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  @@unique([userId, showId, season, episode])
}

model MovieComment {
  id               Int      @id @default(autoincrement())
  movieId          Int
  comment          String
  rating           Float?
  movie            Movie    @relation(fields: [movieId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}


model ShowComment {
  id               Int      @id @default(autoincrement())
  showId  	       Int
  comment          String
  rating           Float?
  show             Show    @relation(fields: [showId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

