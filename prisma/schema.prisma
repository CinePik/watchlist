// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  seed     = "prisma/seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WatchedMovie {
  id               Int      @id @default(autoincrement())
  userId           Int
  movieId          Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  comments         Comment[]
   @@unique([userId, movieId])
}

model SavedMovie {
  userId           Int
  movieId          Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  @@id([userId, movieId])
}

model WatchedSeries {
  id               Int      @id @default(autoincrement())
  userId           Int
  seriesId         Int
  season           Int
  episode          Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  comments         Comment[]
  @@unique([userId, seriesId, season, episode])
}

model SavedSeries {
  userId           Int
  seriesId         Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  @@id([userId, seriesId])
}

model Comment {
  id               Int      @id @default(autoincrement())
  watchedMovieId   Int?
  watchedSeriesId  Int?
  authorId         Int
  Comment          String
  watchedMovie     WatchedMovie? @relation(fields: [watchedMovieId], references: [id])
  watchedSeries    WatchedSeries? @relation(fields: [watchedSeriesId], references: [id])
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

