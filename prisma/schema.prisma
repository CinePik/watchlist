// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  seed     = "prisma/seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WatchedMovie {
  userId           Int
  movieId          Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  comments         Comment[]
  @@id([userId, movieId])
}

model SavedMovie {
  userId           Int
  movieId          Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  @@id([userId, movieId])
}

model WatchedSeries {
  userId           Int
  seriesId         Int
  season           Int
  episode          Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  comments         Comment[]
  @@id([userId, movieId])
}

model SavedSeries {
  userId           Int
  seriesId         Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  @@id([userId, movieId])
}

model Comment {
  id               Int      @id @default(autoincrement())
  watchedMovieId?  Int
  watchedSeriesId? Int
  authorId         Int
  Comment          String
  watchedMovie?    WatchedMovie @relation(fields: [authorId], references: [id])
  watchedSeries?   WatchedSeries @relation(fields: [authorId], references: [id])
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

